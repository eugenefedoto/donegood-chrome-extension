{
    "manifest_version": 2,
    "name": "DoneGood",
    "version": "0.1.0",
    "description": "Shows a DoneGood popup whenever visiting H&M or Levi's.",
    "icons": {
        "16": "icon.png", //Used as the favicon for an extension's pages
        "48": "icon.png", //Used on the extension management page
        "128": "icon.png" //Used during installation & in the Chrome Web Store
    },
    "browser_action": {
        "default_icon": "icon.png"
    },
    "permissions": [
        "http://www.levi.com/US/en_US/",
        "activeTab"
    ],
    "content_scripts": [
        // Levi's and H&M
        {
            "matches": ["http://www.levi.com/US/en_US/"],
            "css": ["styles.css"],
            "js": ["modal.js"]
                //"run_at": "document_end"
        }
    ]
}